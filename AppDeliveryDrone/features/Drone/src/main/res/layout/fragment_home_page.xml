<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeader"
                style="@style/text_bold_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="80dp"
                android:text="@string/string_title_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvContent"
                style="@style/text_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/string_content_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="-50dp"
                android:elevation="@dimen/text_size_10"
                android:src="@drawable/ic_drone_home"
                app:layout_constraintBottom_toTopOf="@+id/cvLocationSelection"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Location Selection Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvLocationSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvContent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="20dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ivArrowDown"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/ic_swap"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!-- Pickup Location -->
                    <View
                        android:id="@+id/viewPickupDot"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_dot_blue"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPickupLocation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvPickupLocation" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPickupLocation"
                        style="@style/text_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/string_select_pick_up_point"
                        android:textColor="#c4c4c4"
                        app:layout_constraintBottom_toTopOf="@+id/guideLine"
                        app:layout_constraintEnd_toStartOf="@+id/ivArrowDown"
                        app:layout_constraintStart_toEndOf="@+id/viewPickupDot" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.1" />

                    <View
                        android:id="@+id/viewDeliveryDot"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_location"
                        app:layout_constraintBottom_toBottomOf="@+id/tvDeliveryLocation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvDeliveryLocation" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDeliveryLocation"
                        style="@style/text_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/string_where_do_you_want_to_deliver"
                        android:textColor="#c4c4c4"
                        app:layout_constraintEnd_toStartOf="@+id/ivArrowDown"
                        app:layout_constraintStart_toEndOf="@+id/viewDeliveryDot"
                        app:layout_constraintTop_toBottomOf="@+id/ivArrowDown" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcLocationHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_10"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvLocationSelection"
                tools:itemCount="2"
                tools:listitem="@layout/item_old_location" />

            <!-- Empty state for location history -->
            <LinearLayout
                android:id="@+id/layoutEmptyLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                app:layout_goneMarginTop="@dimen/dimen_20"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvLocationSelection">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_location_data"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutReorderHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcLocationHistory">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvReorder"
                    style="@style/text_bold_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/string_reset" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvViewOrderHistory"
                    style="@style/text_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_open_history"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerReorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutReorderHeader"
                tools:itemCount="2"
                tools:listitem="@layout/item_reorder" />

            <!-- Empty state for reorder section -->
            <LinearLayout
                android:id="@+id/layoutEmptyReorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dimen_50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutReorderHeader">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_reorder_data"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Create Order Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCreateOrder"
                style="@style/CustomButtonRed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/create_order_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>