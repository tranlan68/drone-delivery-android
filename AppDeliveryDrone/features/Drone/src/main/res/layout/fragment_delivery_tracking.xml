<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.delivery.setting.ui.tracking.DeliveryTrackingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Toolbar -->
        <com.delivery.core.utils.custom.ToolBarCommon
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:src_left="@drawable/ic_arrow_left"
            app:string_title="Chi tiết đơn hàng"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- MAP -->
        <org.maplibre.android.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/statusContainer" />

        <!-- STATUS BLOCK (ĐEN, BO GÓC TRÊN) -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_status_top_rounded"
            android:layout_marginBottom="-20dp"
            app:layout_constraintBottom_toTopOf="@id/bottomInfoContainer">

            <TextView
                android:id="@+id/tvOrderStatusTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Đơn hàng đang được xử lý!" />

            <!-- STATUS STEPS -->
            <LinearLayout
                android:id="@+id/layoutStatusSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStepPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4DA3FF"
                    android:text="Chờ xác nhận" />

                <TextView
                    android:id="@+id/tvArrowStepWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:text="›"
                    android:textColor="#777777" />

                <TextView
                    android:id="@+id/tvStepWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:text="Chờ giao" />

                <TextView
                    android:id="@+id/tvArrowStepDelivering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:text="›"
                    android:textColor="#777777" />

                <TextView
                    android:id="@+id/tvStepDelivering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:text="Đang giao" />

                <TextView
                    android:id="@+id/tvArrowStepDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:text="›"
                    android:textColor="#777777" />

                <TextView
                    android:id="@+id/tvStepDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:text="Đã giao" />
            </LinearLayout>

            <!-- EXPECTED ETA -->
            <TextView
                android:id="@+id/tvExpectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4DA3FF"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="15dp"
                android:text="Giao trong: 6 phút" />

        </LinearLayout>

        <!-- BOTTOM CARD (BO GÓC TRÊN) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_top_rounded"
            android:paddingTop="0dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- CONTENT IN CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnCancelOrder">

                <!-- ORDER ID + DATE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutOrderInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#8C1324"
                        android:text="#47747"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvOderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#777777"
                        android:text="01 Th1 1970 • 08:00"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvOrderId"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- SELECTED PRODUCTS -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSelectedProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutOrderInfo"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/bg_selected_products_border"
                        android:padding="8dp">

                        <GridLayout
                            android:id="@+id/glSelectedProducts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:columnCount="5" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ROUTE ROW -->
                <LinearLayout
                    android:id="@+id/routeRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="25dp"
                    app:layout_constraintTop_toBottomOf="@id/cardSelectedProducts">

                    <TextView
                        android:id="@+id/tvFromLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:text="Hub VMC" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_dot_blue" />

                    <FrameLayout
                        android:id="@+id/trailContainer"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="15dp">

                        <View
                            android:id="@+id/viewMovingDot"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:alpha="0"
                            android:background="@drawable/bg_circle_blue" />
                    </FrameLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/tvToLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Hub DVTC"
                        android:textColor="#444"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#e8e8e8"
                    app:layout_constraintTop_toBottomOf="@id/routeRow" />

                <!-- PACKAGE INFO -->
                <LinearLayout
                    android:id="@+id/layoutPackageInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/viewLine">

                    <!-- Drone -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_drone" />

                        <TextView
                            android:id="@+id/tvPackageType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:textColor="#555"
                            android:textSize="13sp"
                            android:text="Loại hàng" />
                    </LinearLayout>

                    <!-- Weight -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_package_box" />

                        <TextView
                            android:id="@+id/tvPackageWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:textColor="#555"
                            android:textSize="13sp"
                            android:text="S • 1.0kg" />
                    </LinearLayout>

                    <!-- Property -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvProperty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#555"
                            android:textSize="13sp"
                            android:text="Hỏa tốc" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CANCEL BUTTON -->
            <TextView
                android:id="@+id/btnCancelOrder"
                style="@style/CustomButtonRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingVertical="14dp"
                android:text="Hủy đơn"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
