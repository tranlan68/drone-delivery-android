<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="text_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/semi_bold</item>
    </style>

    <style name="text_normal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/regular</item>
    </style>


    <!--font gotham italic-->
    <style name="text_italic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/regular_italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_light_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_bold_light_14" parent="text_light_bold">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>


    <style name="text_bold_16" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="text_bold_14" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_bold_10" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="text_bold_12" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="text_bold_18" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="text_18" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="text_16" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="text_14" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_12" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="text_10" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="layout_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="recycler_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/white</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!--        <item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--        <item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

    <declare-styleable name="CustomEdittext">
        <attr name="title_edittext" format="string|reference" />
        <attr name="src_image_title" format="reference" />
        <attr name="type_edittext" format="integer" />
        <attr name="text_hint_edittext" format="integer" />
        <attr name="save_enabled" format="boolean" />
        <attr name="is_show_title" format="boolean" />
        <attr name="is_show_count" format="boolean" />
        <attr name="max_length" format="integer" />
        <attr name="value_is_required" format="boolean" />
        <attr name="line_number" format="integer" />
        <attr name="android:inputType" format="reference" />
    </declare-styleable>

    <style name="CustomButtonRed" parent="text_bold_14">
        <item name="android:background">@drawable/bg_corner_red_8_custom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>