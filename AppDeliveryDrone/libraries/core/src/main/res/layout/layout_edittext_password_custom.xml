<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/text_bold_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtInformationPw"
            style="@style/text_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext_information"
            android:gravity="center_vertical"
            android:paddingStart="40dp"
            android:paddingEnd="80dp"
            android:textColorHint="@color/color_6F6F6F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Thao huyenThao huyenThao11111111111123" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvTitle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_lock"
            app:layout_constraintBottom_toBottomOf="@+id/edtInformationPw"
            app:layout_constraintStart_toStartOf="@+id/edtInformationPw"
            app:layout_constraintTop_toTopOf="@+id/edtInformationPw" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvClearText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:src="@drawable/ic_close_edittext"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/edtInformationPw"
            app:layout_constraintEnd_toStartOf="@+id/imvShowPassword"
            app:layout_constraintTop_toTopOf="@+id/edtInformationPw" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvShowPassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_gone_pass_word"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/edtInformationPw"
            app:layout_constraintEnd_toEndOf="@+id/edtInformationPw"
            app:layout_constraintTop_toTopOf="@+id/edtInformationPw" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvError"
            style="@style/text_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_Ef1e4a"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtInformationPw"
            tools:text="Tên người dùng chứa tối thiểu 6 ký tự." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
